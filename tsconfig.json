{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "es2016",
    "target": "es6",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "types": [
      "hammerjs",
      "jasmine",
      "node"
    ],
    "lib": ["es2016", "dom"]
  },
  "files": [
    "index.ts",
    "font-aws-ome.ts",
    "lib/font-aws-ome.component.ts",
    "lib/font-aws-ome.component.html"
  ],
  "exclude": [
    "node_modules",
    "bundles"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true
  }
}
